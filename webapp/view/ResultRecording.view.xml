<mvc:View
    controllerName="qmportal.controller.ResultRecording"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true">

    <Page title="Result Recording" showNavButton="true" navButtonPress="onNavBack">

        <content>

            <!-- SEARCH -->
            <VBox class="sapUiMediumMargin">
                <Label text="Search Inspection Lot"/>
                <HBox>
                    <Input id="lotInput" width="300px" placeholder="Enter Inspection Lot"/>
                    <Button text="Search" press="onSearch" type="Emphasized" class="sapUiSmallMarginBegin"/>
                </HBox>
            </VBox>

            <!-- RESULT DATA -->
            <VBox visible="{viewModel>/showData}" class="sapUiMediumMargin">

                <Title text="Record Results"/>

                <f:SimpleForm layout="ResponsiveGridLayout">

    <Label text="Inspection Lot"/>
    <Text text="{record>/InspectionLot}"/>

    <Label text="Material"/>
    <Text text="{record>/MaterialNumber}"/>

    <Label text="Plant"/>
    <Text text="{record>/Plant}"/>

    <Label text="Result Code"/>
    <Text text="{record>/ResultCode}"/>

    <!-- NEW INPUT FIELDS -->
    <Label text="Unrestricted Stock Qty"/>
    <Input type="Number" placeholder="Enter unrestricted stock"/>

    <Label text="Blocked Stock Qty"/>
    <Input type="Number" placeholder="Enter blocked stock"/>

    <Label text="Quality Stock Qty"/>
    <Input type="Number" placeholder="Enter quality stock"/>

</f:SimpleForm>

<Button
    text="Save"
    type="Emphasized"
    press="onSave"
    class="sapUiMediumMarginTop"/>

            </VBox>

        </content>
    </Page>
</mvc:View>
