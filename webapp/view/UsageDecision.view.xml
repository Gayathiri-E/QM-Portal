<mvc:View
    controllerName="qmportal.controller.UsageDecision"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true">

    <Page title="Usage Decision" showNavButton="true" navButtonPress="onNavBack">

        <content>

            <!-- SEARCH -->
            <VBox class="sapUiMediumMargin">
                <Label text="Search Inspection Lot"/>
                <HBox>
                    <Input id="lotInput" width="300px" placeholder="Enter Inspection Lot"/>
                    <Button text="Search" press="onSearch" type="Emphasized" class="sapUiSmallMarginBegin"/>
                </HBox>
            </VBox>

            <!-- DATA -->
            <VBox visible="{viewModel>/showData}" class="sapUiMediumMargin">

                <Title text="Usage Decision Details"/>

                <f:SimpleForm layout="ResponsiveGridLayout">

                    <Label text="Inspection Lot"/>
                    <Text text="{usage>/InspectionLotNo}"/>

                    <Label text="Plant"/>
                    <Text text="{usage>/Plant}"/>

                    <Label text="Usage Decision Code"/>
                    <Text text="{usage>/UsageDecisionCode}"/>

                    <Label text="Decision By"/>
                    <Text text="{usage>/DecisionBy}"/>

                    <Label text="Quality Score"/>
                    <Text text="{usage>/QualityScore}"/>

                </f:SimpleForm>

                <HBox class="sapUiMediumMarginTop">
    <Button
        text="Approve"
        type="Accept"
        press="onApprove"/>

    <Button
        text="Reject"
        type="Reject"
        class="sapUiSmallMarginBegin"
        press="onReject"/>
</HBox>


            </VBox>

        </content>
    </Page>
</mvc:View>
